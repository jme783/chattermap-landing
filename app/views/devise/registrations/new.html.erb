<div id="request-invite" class="<%= @user.errors.any? ? 'modal' : 'modal hide'%>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" >
   <%= simple_form_for resource, :as => resource_name, :url => registration_path(resource_name) , :html => {:class => 'form-horizontal' } do |f| %>
    <div class="modal-header">
      <a class="close" data-dismiss="modal">&#215;</a>
      <h3>Request Invitation</h3>
    </div>
    <div class="modal-body">
      <%= f.error_notification %>
      <%= f.input :email, :placeholder => 'user@example.com' %>
    </div>
    <div class="modal-footer">
      <%= f.submit "Request Invitation", :class => "btn btn-primary", :id => 'invitation_button' %>
      <a class="btn" data-dismiss="modal" href="#">Close</a>
    </div>
  <% end %>
</div>
<div id="romance-background">
  
  <div id="call-to-action">
    <h5>chattermap is evolving online conversation to<br>engage your site's community like never before.</h5>
    <p>Want chattermap on your website?</p>
    <a class="btn btn-primary btn-large" data-toggle="modal" href="#request-invite">Request invite</a>
  </div>
</div>

